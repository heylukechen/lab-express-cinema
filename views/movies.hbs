<div>
  <h1 class="text-6xl">Movies list</h1>
  <a href="/"><button
      class="text-2xl text-white border-solid border-2 bg-sky-600"
    >Back to home</button></a>

  <div class="flex flex-row flex-wrap mb-8 mx-8">
    {{#if allMovies}}
      {{#each allMovies}}
        <div class="w-1/4 rounded overflow-hidden shadow-lg mx-auto my-8 px-8">
          <img class="h-72 object-cover" src="{{image}}" alt="" />
          <div class="px-6 py-4">
            <h1 class="text-xl">{{title}}</h1>
            <a href="/movies/{{_id}}"><button
                class="text-2xl text-white border-solid border-2 bg-sky-600"
              >See more</button></a></div></div>

      {{/each}}
    {{else}}
      <p>No movies found.</p>
    {{/if}}</div>

</div>